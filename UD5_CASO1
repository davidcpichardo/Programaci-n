import java.io.File;
import java.io.FileWriter;
import java.io.IOException;

public class EjStreams {

    public static void main(String[] args) throws IOException {
        File ruta = new File("C:\\EjerciciciosStreams");
        ruta.mkdir();

        File doc1 = new File(ruta, "uno.java");
        File doc2 = new File(ruta, "dos.java");
        File doc3 = new File(ruta, "tres.java");

       doc1.createNewFile();
       doc2.createNewFile();
       doc3.createNewFile();
    }

}
